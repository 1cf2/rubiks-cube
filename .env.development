# Development Environment Configuration
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_CUBE_ANIMATION_DURATION=300
REACT_APP_THREE_JS_DEBUG=true

# API Server Configuration
API_PORT=3001
API_HOST=localhost
API_CORS_ORIGIN=http://localhost:3000

# Feature Flags - Development
ENABLE_MULTIPLAYER=false
ENABLE_LEADERBOARD=true
ENABLE_ANALYTICS=false
ENABLE_SCRAMBLE_GENERATOR=true

# Performance Settings - Development
CUBE_RENDER_QUALITY=medium
MAX_CUBE_HISTORY=50
ANIMATION_FPS_TARGET=60

# Development Tools
WEBPACK_DEV_SERVER_PORT=3000
ENABLE_HOT_RELOAD=true
REACT_APP_DEBUG_MODE=true