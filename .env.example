# Example environment variables
# Copy this file to .env.local for local development

# Application Environment
NODE_ENV=development

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_CUBE_ANIMATION_DURATION=300
REACT_APP_THREE_JS_DEBUG=false

# API Server Configuration
API_PORT=3001
API_HOST=localhost
API_CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rubiks_cube_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rubiks_cube_dev
POSTGRES_USER=rubiks_cube_user
POSTGRES_PASSWORD=your_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# Feature Flags
ENABLE_MULTIPLAYER=false
ENABLE_LEADERBOARD=true
ENABLE_ANALYTICS=false
ENABLE_SCRAMBLE_GENERATOR=true

# Performance Settings
CUBE_RENDER_QUALITY=high
MAX_CUBE_HISTORY=100
ANIMATION_FPS_TARGET=60

# Third-party Services
ANALYTICS_TRACKING_ID=
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Development Tools
WEBPACK_DEV_SERVER_PORT=3000
STORYBOOK_PORT=6006
ENABLE_HOT_RELOAD=true