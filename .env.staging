# Staging Environment Configuration
NODE_ENV=staging

# Frontend Configuration
REACT_APP_API_BASE_URL=https://staging-api.rubiks-cube.app/api
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_CUBE_ANIMATION_DURATION=250
REACT_APP_THREE_JS_DEBUG=false

# API Server Configuration
API_PORT=3001
API_HOST=0.0.0.0

# Feature Flags - Staging (test all features)
ENABLE_MULTIPLAYER=true
ENABLE_LEADERBOARD=true
ENABLE_ANALYTICS=true
ENABLE_SCRAMBLE_GENERATOR=true

# Performance Settings - Staging
CUBE_RENDER_QUALITY=high
MAX_CUBE_HISTORY=75
ANIMATION_FPS_TARGET=60

# Security - Staging (use environment-specific values)
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}

# Database - Staging (use environment-specific values)
DATABASE_URL=${DATABASE_URL}

# Redis - Staging (use environment-specific values)
REDIS_URL=${REDIS_URL}

# Development Tools - Limited in Staging
REACT_APP_DEBUG_MODE=false